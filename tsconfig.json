{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "src",
    "outDir": "dist",

    "lib": ["ES2022"],
    "types": ["node"],             // âœ… indispensable
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  },
  "include": ["src"]
}
